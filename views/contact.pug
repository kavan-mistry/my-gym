extends base.pug

block scripts 
   script(src='/static/index.js')

block style 
    style 
       include ../static/style.css
       include ../static/stylecontact.css

block content 
    div.container
        h1 Contact US
        form(action="/contact", method="post", class="kform")
            input(type="text", class="kinput", name="name", placeholder="enter your name")
            input(type="number", class="kinput", name="phone", placeholder="enter your phone no.")
            input(type="email", class="kinput", name="email", placeholder="enter your email")
            input(type="text", class="kinput", name="address", placeholder="enter your address")
            input(type="text", class="kinput", name="disc", placeholder="enter your discription")
            button(type="submit" class="btn")
                | Submit  
            button(type="reset" class="btn")
                | Reset 
